{
    "compilerOptions": {
        "experimentalDecorators": true,
        "module": "CommonJS",
        "target": "ES2021",
        "strict": true,
        "pretty": true,
        "allowJs": true,
        "moduleResolution": "Node",
        "noImplicitOverride": true,
        "noPropertyAccessFromIndexSignature": true,
        "noUncheckedIndexedAccess": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true
    },
    "include": ["src"]
}
